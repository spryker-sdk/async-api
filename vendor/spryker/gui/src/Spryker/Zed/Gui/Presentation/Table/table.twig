{# this template is used to render the table without ajax call #}
<table class="table table-striped table-bordered table-hover" {% if id %} id="{{ id }}" {% endif %}>
    <thead>
        <tr>
            {% for title in table.header %}
                <th>{{ title | trans }}</th>
            {% endfor %}
        </tr>
    </thead>
    <tbody>
        {% for rows in table.data %}
            <tr>
                {% for column in rows %}
                    <td>{{ column }}</td>
                {% endfor %}
            </tr>
        {% endfor %}
    </tbody>
</table>
