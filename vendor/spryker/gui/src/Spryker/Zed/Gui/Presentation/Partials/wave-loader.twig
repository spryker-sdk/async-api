{% set cssClass = cssClass | default('') %}
{% set modifiers = modifiers | default([]) %}

{% for modifier in modifiers %}
    {% set cssClass = cssClass ~ ' wave-loader--' ~ modifier %}
{% endfor %}

<span class="sk-spinner sk-spinner-three-bounce wave-loader {{ cssClass }}">
    {% apply spaceless %}
        <div class="sk-bounce1"></div>
        <div class="sk-bounce2"></div>
        <div class="sk-bounce3"></div>
    {% endapply %}
</span>
